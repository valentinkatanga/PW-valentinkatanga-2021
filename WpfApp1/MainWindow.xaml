<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="582" Width="808.4">
    <Grid Margin="0,0,-46.4,-29.2">
        <Image x:Name="imgBack" Opacity="0.5" Margin="0,0,48,25" Source="images/background.jpeg" Stretch="Fill"/>
        <Image x:Name="imgPistol" Opacity="0" Margin="655,422,64,44" Source="images/gun.png" Stretch="Fill" x:FieldModifier="public"  />
        <Image x:Name="imgH1" Opacity="1.2" Margin="0,524,793,25" Source="images/heart.png" Stretch="Fill"/>
        <Image x:Name="imgH2" Opacity="1.2" Margin="60,524,733,26" Source="images/heart.png" Stretch="Fill" RenderTransformOrigin="1.273,0.55"/>
        <Image x:Name="imgH3" Opacity="1.2" Margin="120,524,673,26" Source="images/heart.png" Stretch="Fill"/>
        <Button x:Name="btnBord" BorderThickness="0" HorizontalAlignment="Left" Margin="76,78,0,0" FontSize="20px" VerticalAlignment="Top" Width="123" Background="Transparent" Foreground="White" Height="79" Click="btnBord_Click" />
        <Button x:Name="btnhorloge" BorderThickness="0"  HorizontalAlignment="Left" FontSize="20px" Margin="0,251,0,0" VerticalAlignment="Top" Width="109" Height="57" Background="Transparent" Foreground="White" Click="btnhorloge_Click" />
        <Button x:Name="btnBoekenkast" BorderThickness="0" Background="Transparent" FontSize="12px" HorizontalAlignment="Left" Margin="516,150,0,0" VerticalAlignment="Top" Width="75" Height="105" Foreground="White" Click="btnBoekenkast_Click"></Button>
        <Button x:Name="btnTafel" BorderThickness="0" Background="Transparent" FontSize="15px" HorizontalAlignment="Left" Margin="295,367,0,0" VerticalAlignment="Top" Width="260" Height="74" Foreground="White" Click="btnTafel_Click"/>
        <Button x:Name="btnZetel" BorderThickness="0" HorizontalAlignment="Left" FontSize="15px" Margin="149,282,0,0" VerticalAlignment="Top" Width="267" Height="85" Background="Transparent" Foreground="White" Click="btnZetel_Click"/>
        <Button x:Name="btnHint" BorderThickness="0" FontSize="20" Background="LightGray"  HorizontalAlignment="Left" Margin="705,18,0,0" VerticalAlignment="Top" Width="90" Height="45"  Click="btnHint_Click" Foreground="Black" Content="Hint" />
        <Button x:Name="btnTapijt" BorderThickness="0" Background="Transparent"  FontSize="20px" HorizontalAlignment="Left" Margin="357,446,0,0" VerticalAlignment="Top" Width="234" Height="92" Foreground="White" Click="btnTapijt_Click"/>
        <Button x:Name="btnStoel" BorderThickness="0" Background="Transparent"  HorizontalAlignment="Left" Margin="655,282,0,0" VerticalAlignment="Top" Width="129" Height="117" Foreground="White" Click="btnStoel_Click" RenderTransformOrigin="0.022,0.412"/>
        <Button x:Name="btnAardbol" BorderThickness="0" Background="Transparent" FontSize="12px" HorizontalAlignment="Left" Margin="516,260,0,0" VerticalAlignment="Top" Width="87" Height="49" Foreground="White" Click="btnAardbol_Click"/>
        <Button x:Name="btnStart" Content="Start" BorderThickness="0" FontSize="20" Background="LightGray" Foreground="Black" HorizontalAlignment="Left" Margin="705,68,0,0" VerticalAlignment="Top" Width="90" Height="45" Click="Button_Click"/>
        <Button x:Name="btnNxtlvl" BorderThickness="3" Opacity="0" Content="Button" HorizontalAlignment="Left" Margin="655,422,64,44" VerticalAlignment="Top" Width="128.8" Height="116" Click="btnNxtlvl_Click"/>
        <Button x:Name="btnKastje" BorderThickness="0" Background="Transparent"  Foreground="White" FontSize="20px" HorizontalAlignment="Left" Margin="567,212,0,0" VerticalAlignment="Top" Width="78" Height="48" Click="btnKastje_Click"/>
        <Label x:Name="lblBox" Background="Transparent" FontWeight="Bold" Foreground="White" FontSize="18px" Content="ESCAPE OR DIE" HorizontalAlignment="Left" Margin="357,20,0,0"  VerticalAlignment="Top" Height="48" Width="151"/>
        <Label x:Name="lblBoxmsg" Background="Transparent" FontWeight="Bold" Foreground="White" FontSize="18px" Content="LOOK FOR THE WEAPON TO KILL THE GUARD " HorizontalAlignment="Left" Margin="199,68,0,0"  VerticalAlignment="Top" Height="139" Width="446"/>


    </Grid>
</Window>
